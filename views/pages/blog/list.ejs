<div>All Posts</div>

<div class="main">
  <div class="container">
    <div class="row">
      <% posts.forEach( function( post ) { %>
      <div class="col-md-3">
        <div class="card" style="width: 18rem">
          <img src="..." class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= post.body %></p>
            <a href="/api/<%= post.id %>" class="btn btn-primary"
              >Go somewhere</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h2>Add Form</h2>
      <form method="POST" action="/api" enctype="multipart/form-data">
        <div class="form-group">
          <label for="blogTitle"> Title </label>
          <input type="text" class="form-control" name="title" id="blogTitle" />
        </div>

        <div class="form-group">
          <label for="bodyText">Body</label>
          <input type="text" class="form-control" name="body" id="bodyText" />
        </div>
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="customFile" />
          <label class="custom-file-label" name="thumbnail" for="customFile"
            >Choose file</label
          >
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" id="" />
          <label class="form-check-label" for="">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>

<div><%= JSON.stringify(posts) %></div>
